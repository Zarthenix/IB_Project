
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Start.Models.RegisterViewModel
}

<h2>@ViewData["Error"]</h2>

<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Registration</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" name="username" type="text">
                                <span asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" name="password" type="password" value="Test123!">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" name="confirmpassword" type="password" value="Test123!">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" name="email" type="email">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" class="form-control" name="firstname" type="text">
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" name="lastname" type="text">
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>

                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login" asp-action="Login" formmethod="post">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>