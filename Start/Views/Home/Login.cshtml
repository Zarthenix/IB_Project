
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Start.Models.LoginViewModel
}

<h2>@ViewData["msg"]</h2>

<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign in</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control"  name="username" type="text">
                                <span asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" name="password" type="password" value="Test123!" title="Enter a password here">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group form-check">
                            <div class="form-check-input">@Html.EditorFor(x => x.Remember)</div>
                            <label asp-for="Remember" class="col-md-4"></label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login" asp-action="Login" formmethod="post">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>