
@{
    ViewData["Title"] = "Product details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Start.Models.Viewmodels
    @using System.IO
    @using System.Drawing
    @model ProductDetailViewModel
}


<div class="container-fluid col-md-offset-3">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-xs-4">
            <img src="@ViewBag.ImageData" style="max-width:100%;" />
        </div>
        <div class="col-xs-4">
            <h4>Current price:</h4>
            <h4><b>@Model.Price</b></h4>

            <h4>Calories:</h4>
            <h4><b>@Model.Calories</b></h4>

            <h4>Description:</h4>
            <h4>@Model.Description</h4>
        </div>
    </div>
    <div class="col-md-3 col-md-offset-1" style="margin-top:40px;">
        <button type="button" class="btn btn-primary btn-lg btn-block" style="background-color:forestgreen"><i class="fas fa-cart-plus"></i>  Add To Cart</button>
    </div>
</div>
