@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Start.Models.Viewmodels.CreateProductViewModel;
}

<h2>@ViewData["Error"]</h2>

<div class="container-fluid">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:lightgreen">
                    <h3 class="panel-title">Create Product</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" enctype="multipart/form-data">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" name="name" type="text" placeholder="cheese">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" name="price" type="text" placeholder="1.23">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Calories"></label>
                                <input asp-for="Calories" class="form-control" name="calories" type="number" placeholder="400">
                                <span asp-validation-for="Calories"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" placeholder="Fill in product description here."></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image"></label>
                                @Html.EditorFor(model => model.Image)
                            </div>
                            <div class="form-group checkbox-inline">
                                @Html.CheckBoxFor(x => x.IsActive)
                                <label asp-for="IsActive"></label>
                            </div>
                            
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Create" asp-action="Create" formmethod="post" style="margin-top:15px">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
